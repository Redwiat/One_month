import random

gurardim = ["I am",
        "the",
        "damm",
        "porti",
        "dentu"]

cowdim = ["Red",
          "sundor",
          "Bangla",
          "your bff",
          "my best",
          "buri"
          "nion"]

mugirdim = ["Redwan",
          "bangladesh onek sundor",
          "Bangladesh",
          "your bff",
          "my best friend",
          "my bestu buri"
          "Humaira"]

random_gurardim = random.choice(gurardim)
random_mugirdim = random.choice(mugirdim)
random_cowdim = random.choice(cowdim)

print(f"How about you go to {random_gurardim} with {random_mugirdim} and {random_cowdim} ")
